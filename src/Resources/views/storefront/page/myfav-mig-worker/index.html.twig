{% sw_extends '@Storefront/storefront/base.html.twig' %}

{% block base_header %}
{% endblock %}

{% block base_navigation %}
{% endblock %}

{% block base_main %}
    <div class="container-main" myfav-mig-worker="myfav-mig-worker">
        <input type="hidden" id="myfav-mig-work-url" value="{{ url('frontend.myfav.mig.work') }}" />
        <input type="hidden" id="myfav-mig-work-get-next-entry-to-process-url" value="{{ url('frontend.myfav.mig.workGetNextEntryToProcess') }}" />
        <input type="hidden" id="myfav-mig-worker-auth" value="{{ auth }}" />
        <input type="hidden" id="myfav-mig-worker-myfav-mig-id" value="{{ myfavMig.id }}" />
        <div class="container">
            {% if message|length > 0 %}
                <div class="alert alert-success" role="alert" style="border: 1px solid #333; padding: 6px 12px; color: #FFF;">
                    {% if message === 'myfavMigReset' %}
                        Der Worker wurde zurückgesetzt.
                    {% else %}
                        Unbekannte Erfolgsmeldung
                    {% endif %}
                </div>
            {% endif %}
            <h1>Migration Helper - Worker</h1>
            <div class="myfav-mig">
                <div class="myfav-mig mb-3 mt-3" style="font-size: 1rem;">
                    ID: {{ myfavMig.id }}<br />
                    Name: {{ myfavMig.name }}<br />
                    Controller-Name: {{ myfavMig.controllerName }}<br />
                    Pos.: <span id="myfav-mig-worker-pos">{{ myfavMig.pos}}</span><br />
                    State: <span id="myfav-mig-worker-state">{{ myfavMig.state}}</span><br />
                    Letzte aufgerufene URL: <span id="myfav-mig-worker-last-called-url"></span><br /><br />
                    <div class="mb-3">
                        <label class="form-label" for="myfav-mig-worker-selected-entries">Einträge die verarbeitet werden sollen:</label>
                        <input type="text" name="name" class="form-control" id="myfav-mig-worker-selected-entries" />
                        <small>Über diesen Parameter können bestimmte Werte eingegeben werden, um die Verarbeitung einzuschränken. Das kann je Typ variieren. Bspw. können das Artikel-Nummern sein.</small>
                    </div>
                    <div class="col-12" style="display: flex; justify-content: space-between;">
                        <button type="submit" class="btn btn-primary" id="myfav-mig-worker-start">Verarbeitung starten/fortsetzen</button>
                        <a href="{{ path('frontend.myfav.mig.workerReset', { p: auth, myfavMigId: myfavMig.id }) }}"><button type="submit" class="btn btn-secondary" id="myfav-mig-worker-reset" style="margin-left: auto; margin-right: 0;">Zurücksetzen</button></a>
                    </div>
                </div>
                <hr />
                <div>Log:</div>
                <div id="myfav-mig-worker-log"></div>
            </div>
        </div>
    </div>
{% endblock %}

{% block base_cookie_permission %}
{% endblock %}

{% block base_footer %}
{% endblock %}